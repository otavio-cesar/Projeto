<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<beans:bean id="appUserDetailsService" class="security.AppUserDetailsService" />

	<beans:bean id="exceptionTranslationFilter"
		class="org.springframework.security.web.access.ExceptionTranslationFilter">
		<beans:property name="accessDeniedHandler" ref="jsfAccessDeniedHandler" />
		<beans:property name="authenticationEntryPoint" ref="authenticationEntryPoint" />
	</beans:bean>

	<beans:bean id="jsfAccessDeniedHandler" class="security.JsfAccessDeniedHandler">
		<beans:property name="loginPath" value="/AcessoNegado.xhtml" />
		<beans:property name="contextRelative" value="true" />
	</beans:bean>

	<beans:bean id="authenticationEntryPoint"
		class="security.JsfLoginUrlAuthenticationEntryPoint">
		<beans:property name="loginFormUrl" value="/Login.xhtml" />
		<beans:property name="redirectStrategy" ref="jsfRedirectStrategy" />
	</beans:bean>

	<beans:bean id="jsfRedirectStrategy" class="security.JsfRedirectStrategy" />
	<http pattern="/javax.faces.resource/**" security="none" />
	<http pattern="/Login.xhtml" security="none" />

	<http auto-config="false" use-expressions="true">
		<custom-filter ref="exceptionTranslationFilter" before="FILTER_SECURITY_INTERCEPTOR" />

		<intercept-url pattern="/CadastroUsuario.xhtml" access="permitAll" />
		<intercept-url pattern="/Home.xhtml" access="permitAll" />
		<intercept-url pattern="/Ranqueamento.xhtml" access="permitAll" />
		<intercept-url pattern="/problemas/PesquisaProblema.xhtml"
			access="permitAll" />
		<intercept-url pattern="/problemas/VisualizarProblema.xhtml"
			access="permitAll" />

		<intercept-url pattern="/AcessoNegado.xhtml" access="isAuthenticated()" />

		<intercept-url pattern="/problemas/ControleVersao.xhtml"
			access="hasAnyRole('PROFESSOR', 'ADMINISTRADOR')" />
		<intercept-url pattern="/problemas/CadastroProblema.xhtml"
			access="hasAnyRole('PROFESSOR', 'ADMINISTRADOR')" />
		<intercept-url pattern="/problemas/HistoricoSubmissao.xhtml"
			access="hasAnyRole('PROFESSOR', 'ALUNO', 'ADMINISTRADOR')" />
		<!-- intercept-url pattern="/problemas/PesquisaProblema.xhtml" access="hasAnyRole('PROFESSOR', 
			'ALUNO', 'ADMINISTRADOR')" /> -->
		<!-- intercept-url pattern="/problemas/VisualizarProblema.xhtml" access="hasAnyRole('PROFESSOR', 
			'ALUNO', 'ADMINISTRADOR')" /> -->
		<!-- intercept-url pattern="/problemas/**" access="isAuthenticated()" / -->
		<intercept-url pattern="/**" access="denyAll" />

		<form-login login-page="/Login.xhtml"
			authentication-failure-url="/Login.xhtml?invalid=true"
			default-target-url="/Home.xhtml" always-use-default-target="true" />
		<logout logout-url="/j_spring_security_logout"
			invalidate-session="true" />
	</http>

	<authentication-manager>
		<authentication-provider user-service-ref="appUserDetailsService">
			<!-- <password-encoder hash="md5" /> -->
		</authentication-provider>
	</authentication-manager>

</beans:beans>