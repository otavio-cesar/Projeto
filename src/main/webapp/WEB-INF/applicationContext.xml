<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.1.xsd">
    
    <beans:bean id="appUserDetailsService" class="security.AppUserDetailsService" />
      
	<http pattern="/javax.faces.resource/**" security="none" />
    
	<http auto-config="true" use-expressions="true">
		<intercept-url pattern="/CadastroUsuario.xhtml" access="permitAll" />
		<intercept-url pattern="/Home.xhtml" access="permitAll" />
		<intercept-url pattern="/problemas/ControleVersao.xhtml" access="hasAnyRole('PROFESSOR', 'ADMINISTRADOR')" />
		<intercept-url pattern="/problemas/CadastroProblema.xhtml" access="hasAnyRole('PROFESSOR', 'ADMINISTRADOR')" />
		<intercept-url pattern="/problemas/HistoricoSubmissao.xhtml" access="hasAnyRole('PROFESSOR', 'ALUNO', 'ADMINISTRADOR')" />
		<intercept-url pattern="/problemas/PesquisaProblema.xhtml" access="hasAnyRole('PROFESSOR', 'ALUNO', 'ADMINISTRADOR')" />
		<intercept-url pattern="/problemas/VisualizarProblema.xhtml" access="hasAnyRole('PROFESSOR', 'ALUNO', 'ADMINISTRADOR')" />
		<!-- intercept-url pattern="/problemas/**" access="isAuthenticated()" /-->
		<intercept-url pattern="/**" access="denyAll" />
	</http>
	
	<authentication-manager>
		<authentication-provider user-service-ref="appUserDetailsService">
			<!-- <password-encoder hash="md5" /> -->
		</authentication-provider>
	</authentication-manager>
           
</beans:beans>